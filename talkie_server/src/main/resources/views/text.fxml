<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.text.TextFlow?>


<HBox prefWidth="428.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
   <children>
       <ImageView fx:id="image" fitHeight="59.0" fitWidth="49.0" pickOnBounds="true" preserveRatio="true">
          <image>
             <Image url="@../images/talki-logo-with-name.png" />
          </image>
         <HBox.margin>
            <Insets bottom="5.0" left="5.0" top="5.0" />
         </HBox.margin>
       </ImageView>
      <TextFlow style="-fx-background-color: #F0E1DE; -fx-padding: 8px; -fx-background-radius: 9;">
         <HBox.margin>
            <Insets bottom="5.0" left="3.0" right="3.0" top="5.0" />
         </HBox.margin>
         <children>
            <Text fx:id="msg" strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-: #F0E1DE;">
               <font>
                  <Font size="18.0" />
               </font>
            </Text>
         </children>
      </TextFlow>
   </children>
</HBox>
